<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Second" >

    <Button
        android:id="@+id/btnProximity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Proximity Sensor"
        android:textColor="#fff"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/btnLight"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="sett"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsettings"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnAccelerometer" />

    <Button
        android:id="@+id/btnLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Light Sensor"
        android:textColor="#fff"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/btnAccelerometer"
        android:layout_alignStart="@+id/btnProximity" />

    <Button
        android:id="@+id/btnAccelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Accelerometer"
        android:textColor="#fff"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/btnProximity" />

    <Button
        android:text="EXIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnProximity"
        android:layout_alignEnd="@+id/btnProximity"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="41dp"
        android:id="@+id/btnexit" />

</RelativeLayout>