<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ebakyt.androidsensors"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        //android:theme="@style/AppTheme" android:debuggable="false">
        <activity
            android:name="androidexample.myapplication.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="androidexample.myapplication.seekbar"></activity>
        <activity android:name="androidexample.myapplication.accelerometer.AcceleroMain"></activity>
        <activity android:name="androidexample.myapplication.accelerometer.AcceleroGraph"></activity>
        
        <activity android:name="androidexample.myapplication.gyroscope.GyroMain"></activity>
        <activity android:name="androidexample.myapplication.gyroscope.GyroGraph"></activity>
        
        <activity android:name="androidexample.myapplication.light.LightMain"></activity>
        <activity android:name="androidexample.myapplication.light.LightGraph"></activity>
        
        <activity android:name="androidexample.myapplication.acceleration.LinAcceleroMain"></activity>
        <activity android:name="androidexample.myapplication.acceleration.LinAcceleroGraph"></activity>
        
        <activity android:name="androidexample.myapplication.magnetometer.MagnetoMain"></activity>
        <activity android:name="androidexample.myapplication.magnetometer.MagnetoGraph"></activity>
        
        <activity android:name="androidexample.myapplication.pressure.PressureMain"></activity>
        <activity android:name="androidexample.myapplication.pressure.PressureGraph"></activity>
        
        <activity android:name="androidexample.myapplication.proximity.ProximityMain"></activity>
        <activity android:name="androidexample.myapplication.proximity.ProximityGraph"></activity>

    </application>

</manifest>
